<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="short_code_res_lang_tree_view" model="ir.ui.view">
      <field name="model">res.lang</field>
      <field name="inherit_id" ref="base.res_lang_tree"/>
      <field name="arch" type="xml">
          <field name="code" position="after" >
              <field name="short_code" />
          </field>
      </field>
    </record>

    <record id="short_code_res_lang_form_view" model="ir.ui.view">
      <field name="model">res.lang</field>
      <field name="inherit_id" ref="base.res_lang_form"/>
      <field name="arch" type="xml">
          <field name="code" position="after" >
              <field name="short_code" />
          </field>
      </field>
    </record>

  </data>
</openerp>