<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="changes_view_form" model="ir.ui.view">
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" ref="base.view_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Changes">
                    <button type="object" name="reset_last_change"
                            string="Undo last change" class="oe_link oe_right"/>
                    <field name="diffs" nolabel="1" colspan="4" readonly="1">
                        <tree string="Changes">
                            <field name="element" />
                            <field name="name" />
                            <field name="datetime" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

  </data>
</openerp>